# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Yandex GPT Configuration (для миграции)
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key_here
YANDEX_GPT_FOLDER_ID=your_folder_id_here
YANDEX_GPT_MODEL=yandexgpt-lite
YANDEX_GPT_URI=gpt://your_folder_id/yandexgpt-lite

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/upak_db

# Redis
REDIS_URL=redis://localhost:6379

# Application
DEBUG=true
LOG_LEVEL=info
API_VERSION=v1

# Feature Flags для миграции
ENABLE_AB_TESTING=false
YANDEX_GPT_RATIO=0.0
ENABLE_YANDEX_GPT=false
FALLBACK_TO_OPENAI=true